// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Better Auth required tables
model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Subscription status
  isPro                 Boolean   @default(false)
  subscriptionExpiresAt DateTime?
  subscriptionUpdatedAt DateTime?

  accounts               Account[]
  sessions               Session[]
  verifications          Verification[]
  authCodes              AuthCode[]
  receipts               Receipt[]
  sharedReceipts         ReceiptShare[]  @relation("SharedReceipts")
  groupMembers           GroupMember[]
  createdGroups          Group[]         @relation("GroupCreator")
  friendRequestsSent     FriendRequest[] @relation("Requester")
  friendRequestsReceived FriendRequest[] @relation("Requestee")
  friendshipsAsUser1     Friendship[]    @relation("User1")
  friendshipsAsUser2     Friendship[]    @relation("User2")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String?

  @@index([identifier, value])
}

model AuthCode {
  id        String   @id @default(cuid())
  code      String   @unique
  userId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([code])
  @@index([userId])
  @@index([createdAt])
}

model Receipt {
  id        String    @id @default(cuid())
  userId    String
  data      Json      @db.JsonB
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  syncedAt  DateTime? // When the receipt was last synced from client

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  sharedWith   ReceiptShare[]

  @@index([userId])
  @@index([userId, createdAt])
  @@index([userId, syncedAt])
}

model ReceiptShare {
  id        String   @id @default(cuid())
  receiptId String
  userId    String   // The user who has access to the receipt
  createdAt DateTime @default(now())

  receipt Receipt @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  user    User    @relation("SharedReceipts", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([receiptId, userId])
  @@index([receiptId])
  @@index([userId])
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String?
  iconKey     String? // S3 key for the group icon
  code        String   @unique // Unique join code
  creatorId   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  creator User          @relation("GroupCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members GroupMember[]

  @@index([code])
  @@index([creatorId])
}

model GroupMember {
  id       String   @id @default(cuid())
  groupId  String
  userId   String
  role     String   @default("member") // "admin" | "member"
  joinedAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([userId])
}

model FriendRequest {
  id          String   @id @default(cuid())
  requesterId String
  requesteeId String
  token       String   @unique // Unique QR code token
  createdAt   DateTime @default(now())
  expiresAt   DateTime // Token expires in 7 days (set in application code)

  requester User @relation("Requester", fields: [requesterId], references: [id], onDelete: Cascade)
  requestee User @relation("Requestee", fields: [requesteeId], references: [id], onDelete: Cascade)

  @@unique([requesterId, requesteeId])
  @@index([token])
  @@index([requesterId])
  @@index([requesteeId])
  @@index([expiresAt])
}

model Friendship {
  id        String   @id @default(cuid())
  user1Id   String
  user2Id   String
  createdAt DateTime @default(now())

  user1 User @relation("User1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2 User @relation("User2", fields: [user2Id], references: [id], onDelete: Cascade)

  @@unique([user1Id, user2Id])
  @@index([user1Id])
  @@index([user2Id])
}
