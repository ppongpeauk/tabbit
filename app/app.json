{
  "expo": {
    "name": "Tabbit",
    "slug": "tabbit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon-ai2.png",
    "scheme": "tabbit",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ppkl.tabbit",
      "infoPlist": {
        "UIDesignRequiresCompatibility": true,
        "NSCameraUsageDescription": "This app needs access to your camera to scan receipts and food items.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select receipt images.",
        "NSContactsUsageDescription": "This app needs access to your contacts to import contacts from your device to add as friends."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.ppkl.tabbit"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow $(PRODUCT_NAME) to access your contacts."
        }
      ],
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font",
      "expo-maps",
      "expo-secure-store",
      "expo-web-browser",
      "expo-localization",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.1007672962218-o67io1st4gnevkinaqo4cdeo38ergoh4"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
